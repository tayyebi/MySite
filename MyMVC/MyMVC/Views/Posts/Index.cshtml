@model IEnumerable<MyMVC.Models.Post>

@{
    ViewBag.Title = "پست ها";
}

<p>
    @Html.ActionLink("ارسال پست جدید", "Create")
</p>
<table>
    <tr>
        <th>
            فرستنده
        </th>
        <th>
            گروه
        </th>
        <th>
            عنوان
        </th>
        <th>
            تاریخ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Admin.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id })
                @Html.ActionLink("جزئیات", "Details", new { id = item.Id })
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
